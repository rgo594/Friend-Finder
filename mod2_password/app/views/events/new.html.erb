<h1>Create Event </h1>
<%= form_for @event do |f| %>

  <div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <%= f.label :location %>
  <%= f.text_field :location %>
  </div>


  <%= f.label :date %>
  <%= f.datetime_field :date, data:{ provide:'datepicker' } %>

  <div class="field">
  <%= f.label :description %>
  <%= f.text_field :description %>
  </div>

  <div class="field">
  <%= f.label :image_url %>
  <%= f.text_field :img %>
  </div>

  <%= f.submit %>

<% end %>

<%= link_to 'Back', :back %>
